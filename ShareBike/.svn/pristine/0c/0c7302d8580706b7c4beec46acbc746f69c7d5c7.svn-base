<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.panda.sharebike.ui.userguide.RechargeInstructionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_dimens_8"
            android:textColor="@color/tv_bold_color"
            android:textSize="@dimen/text_dimens_14"
            android:text="充值说明" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_dimens_8"
            android:text="@string/recharge_instruction"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/tv_selected_color" />

        <LinearLayout
            android:layout_marginTop="@dimen/space_dimens_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:layout_marginRight="@dimen/space_dimens_5"
                android:src="@mipmap/icon_recharge_instru1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_dimens_5"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_recharge_instru2" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_dimens_8"
            android:text="@string/recharge_tip"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/tv_selected_color" />
    </LinearLayout>
</ScrollView>

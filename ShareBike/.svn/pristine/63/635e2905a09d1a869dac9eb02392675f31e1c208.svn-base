<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.sharebike.ui.userguide.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/iv__logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_logo" />

        <TextView
            android:layout_below="@+id/iv__logo"
            android:layout_marginTop="@dimen/space_dimens_8"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/tv_bold_color"
            android:text="v1.1.1.1" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/bg_white"
        android:padding="@dimen/space_dimens_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bold_color"
            android:text="微信公众号" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_user_guide"
            android:layout_height="wrap_content"
            android:text="巧骑单车中国" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_background" />

    <RelativeLayout
        android:background="@color/bg_white"
        android:padding="@dimen/space_dimens_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bold_color"
            android:text="联系电话" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_user_guide"
            android:layout_height="wrap_content"
            android:text="4004004000" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_background" />

    <RelativeLayout
        android:background="@color/bg_white"
        android:padding="@dimen/space_dimens_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bold_color"
            android:text="电子邮箱" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_user_guide"
            android:layout_height="wrap_content"
            android:text="contact@qiaoqi.com" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_background" />

    <RelativeLayout
        android:background="@color/bg_white"
        android:padding="@dimen/space_dimens_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bold_color"
            android:text="政府及公共事务" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_user_guide"
            android:layout_height="wrap_content"
            android:text="public@qiaoqi.com" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_background" />

    <RelativeLayout
        android:background="@color/bg_white"
        android:padding="@dimen/space_dimens_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_bold_color"
            android:text="官方网站" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textColor="@color/tv_user_guide"
            android:layout_height="wrap_content"
            android:text="qiaoqi.com" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="杭州巧奇科技有限公司"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_dimens_20"
            android:textColor="#FF333333"
            android:textSize="@dimen/text_dimens_14" />
    </RelativeLayout>

</LinearLayout>

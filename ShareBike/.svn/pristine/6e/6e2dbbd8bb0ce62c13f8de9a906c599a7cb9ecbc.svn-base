<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="@dimen/space_dimens_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_dimens_18"
            android:textColor="@color/tv_number_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公告" />

        <TextView
            android:id="@+id/tv_finsh"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/tv_number_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭" />
    </RelativeLayout>

    <TextView
        android:paddingRight="@dimen/space_dimens_12"
        android:paddingTop="@dimen/space_dimens_8"
        android:paddingBottom="@dimen/space_dimens_8"
        android:paddingLeft="@dimen/space_dimens_12"
        android:textColor="@color/tv_selected_color"
        android:text="@string/title_message"
        android:textSize="@dimen/text_dimens_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.sharebike.ui.search.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal"
        android:paddingTop="8dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_search_et"
            android:drawableLeft="@drawable/icon_search_et"
            android:drawablePadding="3dp"
            android:hint="去哪儿找小红车"
            android:padding="6dp"
            android:textColor="@color/et_foreground"
            android:textColorHint="@color/et_hint_foreground"
            android:textSize="@dimen/content_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:padding="6dp"
            android:text="取消"
            android:textColor="@color/title_foreground"
            android:textSize="@dimen/title_size" />
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.panda.sharebike.ui.selfinfo.ApplyRefundActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="退款金额"
            android:textColor="@color/title_default"
            android:textSize="@dimen/sub_title_size" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:text="0元"
            android:textColor="@color/content_foreground"
            android:textSize="@dimen/content_size" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginTop="12dp"
        android:text="退款原因"
        android:textColor="#FF666666"
        android:textSize="@dimen/content_size" />

    <ListView
        android:id="@+id/lv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:divider="@color/line_background"
        android:dividerHeight="1px"
        android:listSelector="@color/transparent" />

    <Button
        android:id="@+id/btn_refund"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_wallet_recharge"
        android:text="申请退款"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/sub_title_size" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.panda.sharebike.ui.selfinfo.MyWalletActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="43dp"
        android:paddingTop="43dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的余额(元)"
            android:textColor="@color/title_foreground"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="0.0"
            android:textColor="@color/RechargeMoneyActivity_money"
            android:textSize="50sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_wallet_recharge"
        android:text="立即充值"
        android:textColor="@color/bg_white"
        android:textSize="@dimen/sub_title_size" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_deposit"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="我的押金"
            android:textColor="@color/title_default"
            android:textSize="@dimen/sub_title_size" />

        <ImageView
            android:id="@+id/iv_right_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_right" />

        <TextView
            android:id="@+id/tv_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/iv_right_deposit"
            android:textColor="@color/content_foreground"
            android:textSize="15sp"
            tools:text="99元，退押金" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/iv_right_deposit"
            android:textColor="@color/content_foreground"
            android:textSize="15sp"
            tools:text="退押金" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_background" />

    <RelativeLayout
        android:id="@+id/rl_balance"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_white"
        android:paddingLeft="@dimen/margin_horizontal"
        android:paddingRight="@dimen/margin_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="余额明细"
            android:textColor="@color/title_default"
            android:textSize="@dimen/sub_title_size" />

        <ImageView
            android:id="@+id/iv_right_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_right" />
    </RelativeLayout>
</LinearLayout>

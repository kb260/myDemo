<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="60dp"
    android:elevation="0dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="@dimen/space_dimens_8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_dimens_18"
            android:textColor="@color/tv_number_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户需知" />

        <TextView
            android:id="@+id/tv_finsh"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_dimens_14"
            android:textColor="@color/tv_number_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭" />
    </RelativeLayout>

    <TextView
        android:id="@+id/kb_toast"
        android:paddingRight="@dimen/space_dimens_12"
        android:paddingTop="@dimen/space_dimens_8"
        android:paddingBottom="@dimen/space_dimens_8"
        android:paddingLeft="@dimen/space_dimens_12"
        android:textColor="@color/tv_selected_color"
        android:text="@string/title_message"
        android:textSize="@dimen/text_dimens_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v7.widget.CardView>
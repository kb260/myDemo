<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_white"
    android:layout_height="65dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/space_dimens_3"
                android:paddingTop="@dimen/space_dimens_6"
                android:paddingBottom="@dimen/space_dimens_3"
                android:layout_gravity="center"
                android:src="@drawable/icon_dibiao" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="目的地"
                android:textColor="#0F0F0F"
                android:paddingRight="@dimen/space_dimens_3"
                android:paddingTop="@dimen/space_dimens_6"
                android:paddingLeft="@dimen/space_dimens_6"
                android:paddingBottom="@dimen/space_dimens_3"
                android:layout_gravity="center"
                android:textSize="@dimen/text_dimens_15" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="目的地"
            android:paddingBottom="@dimen/space_dimens_6"
            android:textColor="@color/hint_map_color"
            android:textSize="@dimen/text_dimens_12" />
    </LinearLayout>
</RelativeLayout>


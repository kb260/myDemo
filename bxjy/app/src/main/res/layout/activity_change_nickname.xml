<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kb260.bxjy.ui.mine.ChangeNicknameActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/a_changeNickname_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/a_changeNickname_toolbarRight"
            android:layout_gravity="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/text_title"
            android:textSize="17sp"
            android:text="@string/account_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <View
        android:background="@color/card_bg"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <EditText
        android:id="@+id/a_changeNickname_tvNickname"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        android:hint="@string/changeNickname_hint"
        android:padding="15dp"
        android:drawableEnd="@drawable/clear"
        android:drawableRight="@drawable/clear"
        android:drawablePadding="15dp"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/card_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

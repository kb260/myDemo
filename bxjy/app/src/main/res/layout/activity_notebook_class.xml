<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kb260.bxjy.ui.mine.NotebookClassActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/a_notebookClass_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/black"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/a_notebookClass_toolbarRight"
            android:layout_gravity="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/text_title"
            android:textSize="17sp"
            android:text="@string/notebookClass_toolbarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/card_bg"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/a_notebookClass_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>

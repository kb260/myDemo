<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/input_pw_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/text_title"
            android:text="请输入密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:id="@+id/inputPw_cancel"
            android:src="@drawable/pay_input_x"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <com.kb260.bxjy.weight.PayPwdEditText
        android:id="@+id/inputPw_ppet"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_width="match_parent"
        android:layout_height="49dp"/>

    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/inputPw_tvPwError"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:textColor="#ee4545"
            android:textSize="12sp"
            android:text="您输入的密码不正确，请再试一次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/inputPw_reflect"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="提现"
        android:background="@drawable/inputpw_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
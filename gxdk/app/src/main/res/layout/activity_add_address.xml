<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.AddAddressActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        style="@style/item_llTheme">

        <TextView
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_addAddress_receiver"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_addAddress_etReceiver"
            android:textColor="@color/txt333"
            android:textSize="14sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">

        <TextView
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_addAddress_phone"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_addAddress_etPhone"
            android:textColor="@color/txt333"
            android:inputType="phone"
            android:textSize="14sp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">

        <TextView
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_addAddress_whiteAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/txt333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">

        <TextView
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_addAddress_defaultsAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/a_addAddress_ok"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/a_addAddress_ok"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

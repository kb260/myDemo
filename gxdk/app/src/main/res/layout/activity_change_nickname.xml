<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.ChangeNicknameActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        style="@style/item_llTheme">

        <EditText
            android:lines="1"
            android:maxLength="16"
            android:id="@+id/a_me_meDetail_nickname_et"
            android:hint="@string/a_me_meDetail_nickname_hint"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:textColor="@color/txt333"
            android:inputType="text"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/a_me_meDetail_nickname_ivClear"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:src="@drawable/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="12sp"
        android:text="@string/a_me_meDetail_nickname_description"
        android:textColor="@color/txt999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/a_me_meDetail_nickname_btSave"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/a_me_meDetail_changePhone_save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

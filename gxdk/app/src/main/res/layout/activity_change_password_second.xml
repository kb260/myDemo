<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.ChangePasswordSecondActivity">

    <include layout="@layout/toolbar"/>


    <LinearLayout
        android:id="@+id/a_me_meDetail_payPassword_changeOrForget_llChange"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            style="@style/item_llTheme">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/txt666"
                android:text="绑定手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/a_me_meDetail_payPassword_change_phone"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            style="@style/item_llTheme2">
            <TextView
                android:textSize="14sp"
                android:textColor="@color/txt666"
                android:text="@string/a_me_meDetail_payPassword_change_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:lines="1"
                android:maxLength="6"
                android:digits="0123456789"
                android:id="@+id/a_me_meDetail_payPassword_change_old"
                android:hint="@string/a_me_meDetail_payPassword_change_oldHint"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textSize="14sp"
                android:textColorHint="@color/txt999"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_payPassword_change_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:lines="1"
            android:maxLength="6"
            android:digits="0123456789"
            android:id="@+id/a_me_meDetail_payPassword_change_new"
            android:hint="@string/a_me_meDetail_payPassword_change_newHint"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_payPassword_change_newAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:lines="1"
            android:maxLength="6"
            android:digits="0123456789"
            android:id="@+id/a_me_meDetail_payPassword_change_newAgain"
            android:hint="@string/a_me_meDetail_payPassword_change_newAgainHint"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/a_me_meDetail_payPassword_change_btSave"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/a_me_meDetail_changePhone_save"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

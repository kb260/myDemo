<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.CharacterApplicationActivity">


    <android.support.v7.widget.Toolbar
        android:layout_marginBottom="1dp"
        android:id="@+id/a_character_application_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:text="@string/a_character_application_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/a_main_pg"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/a_characterApplication_toolbarRight"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/character_application_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        style="@style/item_llTheme">
        <TextView
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_character_application_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Spinner
            android:id="@+id/a_characterApplication_sp"
            android:spinnerMode="dropdown"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:entries="@array/application"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="@string/name"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplication_etName"
            android:maxLength="20"
            android:inputType="textPersonName"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="@string/nameHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="@string/phone"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/a_characterApplication_tvPhone"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_characterApplication_llCompanyName"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="@string/companyName"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplication_etCompanyName"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="@string/companyNameHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_characterApplication_llCompanyAddress"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="@string/companyAddress"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplication_etCompanyAddress"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="@string/companyAddressHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/a_characterApplication_llBink"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_bankManager_bank"
            android:layout_width="86dp"
            android:layout_height="wrap_content" />

        <EditText
            android:visibility="gone"
            android:textSize="14sp"
            android:lines="1"
            android:textColorHint="@color/txt999"
            android:hint="@string/a_bankManager_bankHint"
            android:id="@+id/a_characterApplication_etBank"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/a_characterApplication_tvBank"
            android:textColor="@color/txt333"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/a_characterApplication_llBranch"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_bankManager_branch"
            android:layout_width="86dp"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="14sp"
            android:lines="1"
            android:textColorHint="@color/txt999"
            android:hint="@string/a_bankManager_branchHint"
            android:id="@+id/a_characterApplication_etBranch"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/a_characterApplication_llBankAddress"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_bankManager_bankAddress"
            android:layout_width="86dp"
            android:layout_height="wrap_content" />

        <EditText
            android:textSize="14sp"
            android:lines="1"
            android:textColorHint="@color/txt999"
            android:hint="@string/a_bankManager_bankAddressHint"
            android:id="@+id/a_characterApplication_etBankAddress"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/a_characterApplication_btApplication"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/application"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

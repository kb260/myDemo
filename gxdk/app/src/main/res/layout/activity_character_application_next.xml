<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.CharacterApplicationNextActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/a_characterApplicationNext_llCity"
        style="@style/item_llTheme">
        <TextView
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/txt666"
            android:text="所在城市"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/a_characterApplicationNext_tvCity"
            android:textColor="@color/txt333"
            android:textSize="16sp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="社保个人账号"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplicationNext_etSocialSecurity"
            android:maxLength="20"
            android:inputType="text"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="请输入社保账号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="社保密码"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplicationNext_etSocialSecurityPassword"
            android:maxLength="20"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="请输入社保密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="公积金账户"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplicationNext_etProvidentFund"
            android:maxLength="20"
            android:inputType="text"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="请输入公积金账户"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:text="公积金密码"
            android:textColor="@color/txt666"
            android:layout_width="87dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/a_characterApplicationNext_etProvidentFundPassword"
            android:maxLength="20"
            android:inputType="textPassword"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/txt999"
            android:hint="请输入公积金密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


 <LinearLayout
     android:padding="5dp"
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <CheckBox
         android:id="@+id/a_characterApplicationNext_cb"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <TextView
         android:textSize="12sp"
         android:text="提交即视为同意"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <TextView
         android:id="@+id/a_characterApplicationNext_tvProtocol"
         android:textSize="12sp"
         android:textColor="@color/bt_red"
         android:text="《授权协议》"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

 </LinearLayout>

    <Button
        android:id="@+id/a_characterApplicationNext_btSubmit"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/btSubmit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

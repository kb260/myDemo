<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kb260.gxdk.view.home.InformationDetailActivity">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/a_informationDetail_iv"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/a_informationDetail_tvTime"
            android:textSize="12sp"
            android:textColor="@color/toolbar_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:layout_alignLeft="@+id/a_information_cardView"
            android:layout_alignStart="@+id/a_information_cardView" />
        <android.support.v7.widget.CardView
            android:id="@+id/a_information_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="155dp"
            android:background="@color/toolbar_white">

            <TextView
                android:id="@+id/a_informationDetail_tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/txt333"
                android:textSize="14sp" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_main_bg"
    android:orientation="vertical"
    tools:context="com.kb260.gxdk.view.me.IntegralActivity">

    <android.support.v7.widget.Toolbar
        android:layout_marginBottom="1dp"
        android:id="@+id/a_integral_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:text="@string/a_integral_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/a_main_pg"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/a_integral_toolbarRight"
            android:padding="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="end"
            android:textColor="@color/txt666"
            android:textSize="14sp"
            android:text="@string/a_integral_toolbarRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/toolbar_white"
        android:layout_width="match_parent"
        android:layout_height="102dp">
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                
                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/integral_1"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/a_integral_integral_1"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/a_integral_integral_1"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/integral_2"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/a_integral_integral_2"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/a_integral_integral_2"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:id="@+id/a_integral_integralDetail"
                    android:gravity="center"
                    android:text="@string/a_integral_integral_log"
                    android:textSize="12sp"
                    android:textColor="@color/integral_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@color/integral_3"/>
                <TextView
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:text="@string/a_integral_integral_3"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/a_integral_integral_3"
                    android:textColor="@color/txt333"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/a_integral_btPut"
                android:textSize="13sp"
                android:background="@drawable/integral_put_bt"
                android:text="@string/a_integral_integral_put"
                android:textColor="@color/toolbar_white"
                android:layout_width="wrap_content"
                android:layout_height="24dp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/a_integral_btGet"
                android:textSize="13sp"
                android:background="@drawable/integral_get_bt"
                android:text="@string/a_integral_integral_get"
                android:textColor="@color/toolbar_white"
                android:layout_width="wrap_content"
                android:layout_height="24dp" />


        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="6dp"
        android:background="@color/toolbar_white"
        android:textColor="@color/txt333"
        android:textSize="14sp"
        android:text="@string/a_integral_detail"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/a_integral_stl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/toolbar_white"
        tl:tl_indicator_color="#EA4C51"
        tl:tl_indicator_height="1.5dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="#EA4C51"
        tl:tl_textUnselectColor="#2A2A2A"
        tl:tl_underline_color="#1A000000"
        tl:tl_underline_height="1dp"/>

    <android.support.v4.view.ViewPager
        android:background="@color/a_main_bg"
        android:id="@+id/a_integral_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>

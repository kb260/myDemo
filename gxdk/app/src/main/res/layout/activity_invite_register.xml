<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.InviteRegisterActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/a_inviteRegister_llSp"
                style="@style/item_llTheme">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/application_character"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/a_inviteRegister_sp"
                    android:spinnerMode="dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:entries="@array/register_type"
                    />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/name"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:inputType="textPersonName"
                    android:hint="@string/nameHint"
                    android:id="@+id/a_inviteRegister_etName"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/phone"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/phoneHint"
                    android:inputType="phone"
                    android:id="@+id/a_inviteRegister_etPhone"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/code"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/codeHint"
                    android:id="@+id/a_inviteRegister_etCode"
                    android:background="@null"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/a_inviteRegister_btGetCode"
                    android:textSize="12sp"
                    android:text="@string/getCode"
                    android:textColor="@color/toolbar_white"
                    android:background="@drawable/get_code_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llIdCard"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/idcard"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="19"
                    android:hint="@string/idcardHint"
                    android:inputType="text"
                    android:id="@+id/a_inviteRegister_etIdCard"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/password"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:maxLength="16"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:hint="@string/passwordHint"
                    android:inputType="textPassword"
                    android:id="@+id/a_inviteRegister_etPassword"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llCompanyName"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/companyName"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/companyNameHint"
                    android:id="@+id/a_inviteRegister_etCompanyName"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llCompanyAddress"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/companyAddress"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/companyAddressHint"
                    android:id="@+id/a_inviteRegister_etCompanyAddress"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llBink"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/a_bankManager_bank"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/a_bankManager_bankHint"
                    android:id="@+id/a_inviteRegister_bank"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llBranch"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/a_bankManager_branch"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/a_bankManager_branchHint"
                    android:id="@+id/a_inviteRegister_branch"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/a_inviteRegister_llBankAddress"
                style="@style/item_llTheme2">
                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/txt666"
                    android:text="@string/a_bankManager_bankAddress"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:lines="1"
                    android:textColorHint="@color/txt999"
                    android:maxLength="20"
                    android:hint="@string/a_bankManager_bankAddressHint"
                    android:id="@+id/a_inviteRegister_bankAddress"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_inviteRegister_address"
                style="@style/item_llTheme2">

                <TextView
                    android:textColor="@color/txt666"
                    android:textSize="14sp"
                    android:text="@string/address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/a_inviteRegister_tvAddress"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/me_arraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/a_inviteRegister_btRegister"
                android:background="@drawable/bt_1"
                android:textColor="@color/toolbar_white"
                android:textSize="17sp"
                android:text="@string/register"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_width="250dp"
                android:layout_height="49dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

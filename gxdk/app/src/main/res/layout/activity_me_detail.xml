<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.MeDetailActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/a_me_meDetail_icon"
        android:background="@color/toolbar_white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:padding="15dp"
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_header"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/a_me_meDetail_ivIcon"
            android:src="@drawable/user"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <ImageView
            android:padding="15dp"
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_nickname"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_nickname"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/a_me_meDetail_tvNickname"
            android:textColor="@color/txt333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_phone"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/a_me_meDetail_tvPhone"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/txt333"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_commonAddress"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_commonAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_card"
        android:layout_marginTop="20dp"
        style="@style/item_llTheme">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_card"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_payPassword"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_payPassword"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/a_me_meDetail_passwordSet"
        style="@style/item_llTheme2">
        <TextView
            android:textSize="14sp"
            android:textColor="@color/txt666"
            android:text="@string/a_me_meDetail_passwordSet"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/me_arraw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/a_me_meDetail_btExit"
        android:background="@drawable/bt_1"
        android:textColor="@color/toolbar_white"
        android:textSize="17sp"
        android:text="@string/a_me_meDetail_exit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="250dp"
        android:layout_height="49dp" />

</LinearLayout>

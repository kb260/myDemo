<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/a_main_bg"
    tools:context="com.kb260.gxdk.view.me.ProductDetailActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/toolbar_white"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:background="@color/bt_red"/>
                <TextView
                    android:id="@+id/a_productDetail_tvType"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/bt_red"
                    android:textSize="14sp"
                    android:text="@string/a_productDetail_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                style="@style/item_llTheme"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_bank"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="工商银行"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_branch"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="浦沿支行"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_day"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="10天"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                android:id="@+id/a_productDetail_llCarYear"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_carYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_carYear"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="1年至5年"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llHouseAge"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_houseAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_houseAge"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="3年内"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_manAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_manAge"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="18岁-35岁"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llHouseType"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_houseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_houseType"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="经济类"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llManType"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_manType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_manType"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="股东 占股比例需35%以上"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llArea"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_area"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="是"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llAreaClaim"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_areaClaim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_areaClaim"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="40平方以上"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_maxMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_maxMoney"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="100万"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_rate"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="年化5%-18%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/a_productDetail_llDoTheNature"
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_daTheNature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_daTheNature"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="住宅 酒店式公寓 排屋"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_repaymentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_repaymentType"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="等额本息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_repaymentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_repaymentTime"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="3个月"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_llTheme2"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_canDoArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/a_productDetail_canDoArea"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="浙江省杭州市滨江区浦沿街道"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                style="@style/item_llTheme3"
                >
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/txt45"
                    android:text="@string/a_productDetail_material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="60dp"
                    android:layout_marginStart="60dp"
                    android:id="@+id/a_productDetail_material"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/txt4A"
                    android:text="身份证正反面 结婚证/离婚证 户口本 房产三证或不动证 公司营业执照 章程 征信 备注无"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:background="@color/toolbar_white">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/f_me_civ"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID："
                            android:textColor="@color/txt333"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/f_me_tvId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:id="@+id/f_me_llMyIntegral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的积分"
                            android:background="@drawable/f_grabmonad_bt"
                            android:textColor="@color/toolbar_white"
                            android:textSize="13sp" />
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/f_me_myIntegral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt666"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="邀请码："
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/txt333"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/f_me_tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/txt333"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="15dp"
                    android:src="@drawable/me_arraw" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/f_me_wdsq"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="1dp"
                android:background="@color/toolbar_white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wdsq" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="@string/f_me_wdsq" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/me_arraw" />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/f_me_wdcp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginBottom="1dp"
                android:background="@color/toolbar_white"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wdcp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="@string/f_me_wdcp" />


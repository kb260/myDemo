<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/footer_character_button1"
        android:layout_margin="15dp"
        android:textSize="17sp"
        android:text="@string/cancel"
        android:textColor="@color/txt333"
        android:background="@drawable/bt_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/footer_character_button2"
        android:layout_margin="15dp"
        android:textSize="17sp"
        android:text="@string/change"
        android:textColor="@color/toolbar_white"
        android:background="@drawable/bt_red"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        />

</LinearLayout>
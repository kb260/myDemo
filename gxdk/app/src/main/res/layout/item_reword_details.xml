<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/toolbar_white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="61dp">

    <ImageView
        android:id="@+id/item_rewordDetail_iv"
        android:src="@drawable/user"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_rewordDetail_tvNickname"
                android:textSize="14sp"
                android:textColor="@color/txt333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/item_rewordDetail_tvId"
                android:textSize="14sp"
                android:textColor="@color/txt333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/item_rewordDetail_tvPhone"
                android:textSize="14sp"
                android:textColor="@color/txt333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="12sp"
                android:textColor="@color/txt999"
                android:text="注册时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:id="@+id/item_rewordDetail_tvTime"
                android:textSize="12sp"
                android:textColor="@color/txt999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_rewordDetail_tvType"
        android:textSize="14sp"
        android:textColor="@color/txt666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>